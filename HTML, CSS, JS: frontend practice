    <script type="text/javascript">
        function isEmpty() {
           var vorname = document.myForm.Vorname.value;
           var mail = document.myForm.Mail.value;
        if((vorname == null || vorname === "" ) || (mail == null || mail === "")) {
            alert("Leeres Feld (Mail oder Vorname)");
        }
        if((!mail.includes('@'))) {
            alert("Kein @ im Mailfeld");
        }
        }

    </script>

